<div id="user_nav">
  <% if current_user %>
    Welcome, <%= current_user.name %>!
    <%= link_to "Sign Out", signout_path %>
  <% else %>
    <%= link_to "Sign in with Github", "/auth/github" %>
  <% end %>
</div>


<% if current_user %>

	<%= image_tag current_user.avatar_url %>
	<%= link_to current_user.username, current_user.github_url %>
	
	<div class="row">
    <div class="span12 offset2">
      <h3 style="text-align:center">Watched Repositories</h3>
    </div>
  </div>
	
	<div class="row">
    <div class="span12 offset2" style="background:#eee">

			<% current_user.api.watched.each do |repo| %>
				<div class="repo">
				
					<div class="meta">
						<span class="watchers-forks">
							watchers: <%= repo.watchers %>
						</span>
						 | 
						<span class="language">
							language: <%= repo.language %>
						</span>
					</div>
					
					<%= image_tag repo.owner.login["avatar_url"] %>
					

					<span class="name">
						<%= repo.owner.login["login"] %> / <%= link_to repo.name, repo.html_url  %>
					</span>

					<p><%= repo.description %></p>

				</div>
			<% end %>
			
			
    </div>
  </div>
	
<% end %>

