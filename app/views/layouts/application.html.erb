<!DOCTYPE html>
<html>
<head>
  <title>Superwatch</title>
  <%= stylesheet_link_tag "bootstrap-1.3.0.css", "application", "repos"  %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="top">
		
		<div id="user_nav">
	  <% if current_user %>
			<%= link_to (image_tag current_user.avatar_url), user_path(current_user.login) %>
	    Welcome, <%= link_to current_user.login, current_user.github_url %>!

			<%= link_to "Sign Out", signout_path %>
	  <% else %>
	    <%= link_to "Sign in with Github", "/auth/github" %>
	  <% end %>
		</div>
	
		<div id="headers">
			<div class="repo_header">
				<div id="filters">
					<%= yield :filters %>
				</div>
			</div>

			<div class="tag_header">
				<div>
					<%= yield :tag_header %>
				</div>
			</div>
		</div>
		
	</div>
	<div id="top_spacer">&#160;</div>

	<div id="main_content_container">
		<div id="main_content">
			<%= yield %>
		</div>
	</div>

	<div id="side_content_container">
		<div id="side_content">
			<%= yield :side_content %>
		</div>
	</div>

	<div id="footer">
		<ul>
			<li><a href="/about">about</a></li>
			<li><a href="/">home</a></li>
			<li><a href="http://github.com" target="_blank">github.com</a></li>
		</ul>
	</div>
	
	<script>
	$(function(){

	})
	</script>
</body>
</html>
