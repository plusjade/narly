var repos = [];

<% repos.each do |repo| %>
	var repo = new App.models.repo(<%= raw repo.to_json(:methods => [:tags]) %>);
	repos.push(repo);
<% end %>

App.mainRepos.reset(repos, {silent : true});
App.mainReposView.render();

// User Tags shown on the right side panel.
App.mainRepos.user.tags.reset(<%= raw @tags.to_json %>, {silent : true});