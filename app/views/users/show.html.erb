<% content_for :tag_header do %>
	<h4>Tags</h4> 
	 <strong><%= link_to "user:#{@owner.login} &#9658;".html_safe, "#" %></strong>
<% end %>

<% content_for :side_content do %>
	<strong><%= link_to "user:#{@owner.login} &#9658;".html_safe, "#" %></strong>
	<ul id="user_tags" class="tag_box">
	<% @tags.each do |tag| %>
		<li><%= link_to_tag(tag, user_tagged_path(@owner.login, tag.name) )%></li>
	<% end %>
	</ul>
	
<% end %>

<% @repos.each do |repo| %>
	<%= render :partial => "repos/repo", :object => repo %>
<% end %>

<% content_for :scripts do %>
	<%= render :partial => "repos/repos_for_backbone", :locals => {:repos => @repos } %>
<% end %>

